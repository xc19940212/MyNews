<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="70dp"
              android:layout_height="70dp">
    <ImageView
        android:id="@+id/iv_photo_item_newben_fragment_activity_main"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/tv_title_item_newben_fragment_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="16sp"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_photo_item_newben_fragment_activity_main"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_date_item_newben_fragment_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时长"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/iv_photo_item_newben_fragment_activity_main"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>